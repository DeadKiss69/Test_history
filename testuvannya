const quizDiv = document.getElementById("quiz");
const messageDiv = document.getElementById("message");
const resultDiv = document.getElementById("result");

// Генеруємо питання та відповіді
questions.forEach((q,index)=>{
  const div=document.createElement("div");
  div.className="question";
  div.innerHTML=`<p>${q.q}</p>`;
  
  const answersDiv=document.createElement("div");
  answersDiv.className="answers";
  
  q.answers.forEach(a=>{
    const label=document.createElement("label");
    label.innerHTML=`<input type="radio" name="q${index}" value="${a.value}"> ${a.text}`;
    answersDiv.appendChild(label);
  });
  
  div.appendChild(answersDiv);
  quizDiv.appendChild(div);
});

// Підрахунок результату
function calculateResult(){
  let allAnswered = true;
  
  const questionDivs = document.querySelectorAll(".question");
  questionDivs.forEach((qDiv,i)=>{
    const selected = document.querySelector(`input[name="q${i}"]:checked`);
    if(!selected){
      qDiv.classList.add("missing");
      allAnswered = false;
    } else {
      qDiv.classList.remove("missing");
    }
  });
  
  if(!allAnswered){
    messageDiv.innerHTML = "Ви надали відповіді не на всі питання, будь ласка, перегляньте ще раз";
    resultDiv.classList.remove("show");
    return;
  } else {
    messageDiv.innerHTML = "";
  }
  
  const counts={"Богдан Хмельницький":0,"Іван Мазепа":0,"Володимир Великий":0,"Ярослав Мудрий":0};
  const inputs=document.querySelectorAll('input[type="radio"]');
  inputs.forEach(input=>{
    if(input.checked){ counts[input.value]++; }
  });
  
  let maxCount=0;
  let winner="";
  for(const key in counts){
    if(counts[key]>maxCount){ maxCount=counts[key]; winner=key; }
  }
  
  resultDiv.innerHTML = `Твоя історична постать: ${winner}`;
  resultDiv.classList.add("show"); // додаємо клас для плавної появи
}
</script>

